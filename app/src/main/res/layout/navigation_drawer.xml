<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/nav_drawer_header"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@color/colorPrimary"
                android:gravity="bottom"
                android:orientation="vertical"
                android:padding="16dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ems_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Employee Management System"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="Pwint Phyu Oo"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="View Profile"
                        android:textColor="@color/purple_text_nav_drawer"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="19dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/calendar" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Attendance"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp" />
            </LinearLayout>


                <com.bib.ems.fragments.NonScrollExpandableListView
                android:id="@+id/nav_expandable_list1"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:divider="@null"
                android:groupIndicator="@null"
                android:scrollbars="none"
                android:smoothScrollbar="false"
                    android:layout_marginTop="12dp"
                android:transcriptMode="disabled" />




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:paddingVertical="12dp"
                    android:paddingLeft="65dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Leave History"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto"></TextView>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:paddingVertical="12dp"
                    android:paddingLeft="65dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Overtime Report"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto"></TextView>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:paddingVertical="12dp"
                    android:paddingLeft="65dp"

                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Overtime History"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto"></TextView>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:paddingVertical="12dp"
                    android:paddingLeft="65dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="WFH Report"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto"></TextView>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:paddingLeft="65dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WFH History"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto"></TextView>
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/vote" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Inquire"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp" />
            </LinearLayout>

                <com.bib.ems.fragments.NonScrollExpandableListView
                    android:id="@+id/nav_expandable_list2"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:divider="@null"
                    android:groupIndicator="@null"
                    android:scrollbars="none"
                    android:smoothScrollbar="false"
                    android:layout_marginTop="12dp"
                    android:transcriptMode="disabled" />


                <com.bib.ems.fragments.NonScrollExpandableListView
                    android:id="@+id/nav_expandable_list3"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:divider="@null"
                    android:groupIndicator="@null"
                    android:scrollbars="none"
                    android:smoothScrollbar="false"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="50dp"
                    android:transcriptMode="disabled" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>